---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import business from "@images/business.jpg"
import reporting from "@images/reporting.jpg"
import analytics from "@images/analytics.jpg"
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import customSoftwareDevelopment from "@images/customSoftwareDevelopment.avif";
import mobileAppDevelopment from "@images/mobileAppDevelopment.avif"
import appdevelop from "@images/appdevelop.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import technicalSupport from "@images/technicalSupport.jpg"
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "IT Staffing",
    subTitle:
      "Our IT staffing services provide highly skilled professionals to meet your specific IT needs. We understand that finding the right talent can be challenging, which is why we offer a pool of experts with the necessary skills and experience to support your projects. Whether you require temporary support for a short-term project or long-term staffing solutions to build a robust IT team, our professionals are equipped to handle complex challenges and drive your IT initiatives forward.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Custom Software Development",
    subTitle:
      "We specialize in creating tailored software solutions across various industries, addressing specific challenges faced by our clients. Our custom development services ensure that you receive solutions perfectly aligned with your business needs. We start by thoroughly understanding your requirements and objectives, then design and develop software that meets those exact specifications. Our expertise spans a wide range of technologies and industries, allowing us to build scalable, reliable, and secure software solutions. By focusing on customization, we ensure that our solutions enhance productivity, streamline processes, and provide a competitive edge for your business.",
    img: customSoftwareDevelopment,
    imgAlt: "Construction site before and after",
    btnExists: false,
    btnTitle: "",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Mobile Application Development",
    subTitle:
      "Increase accessibility and user engagement with our intuitive mobile applications designed for healthcare providers and patients. Our apps enhance interaction and streamline communication between professionals and their patients.",
    single: false,
    imgOne: mobileAppDevelopment,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: appdevelop,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "Business Solutions",
    subTitle:
    "Our comprehensive business solutions are designed to meet the unique needs of organizations across various industries. From streamlining operations to enhancing productivity, our innovative technology solutions provide businesses with the tools they need to thrive in a competitive marketplace. Whether it's custom software development, management systems, or data analytics, our services are tailored to address your specific challenges. With user-friendly interfaces, seamless integration capabilities, and scalable options, our solutions ensure that your operations run efficiently while driving sustainable growth and success.",
    img: business,
    imgAlt:
      "Man in orange and blac+k vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Data Analytics and Reporting Tools",
    subTitle:
      "Our data analytics and reporting tools enable businesses to make informed decisions, improve operational efficiency, and track performance metrics. By harnessing the power of data, our solutions provide valuable insights that drive strategic initiatives and enhance overall business performance. We offer customizable dashboards and detailed reports that allow you to monitor key metrics, identify trends, and make data-driven decisions. Our analytics tools integrate seamlessly with existing systems, providing real-time data and facilitating proactive management. Whether you're tracking financial performance, operational efficiency, or patient outcomes, our tools provide the insights you need to succeed.",
    single: false,
    imgOne: reporting,
    imgOneAlt: "In progress building structure",
    imgTwo: analytics,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Technical Support and Training",
    subTitle:
      "We offer comprehensive technical support and training services to ensure the smooth operation of our solutions. Our dedicated support team is available to assist with troubleshooting, resolving issues, and providing ongoing maintenance. We also offer training programs to ensure that your staff is well-equipped to use our solutions effectively. By providing prompt support and thorough training, we help you achieve a seamless transition and uninterrupted operations, allowing you to focus on delivering excellent patient care and running your business efficiently. Our support services are designed to be responsive and proactive, ensuring that potential issues are addressed before they impact your operations.",
    img: technicalSupport,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Expert Consultation Services | ScrewFast",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://screwfast.uk",
        "name": "ScrewFast",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Build future-ready web apps with the right technology partner"
    subTitle="Samarth Meditech is dedicated to transforming healthcare and business operations with innovative and reliable technology solutions. Our tailored services meet the diverse needs of healthcare professionals and business leaders, enhancing efficiency and productivity. By leveraging cutting-edge technology, we empower organizations to streamline processes and deliver personalized experiences. We focus on addressing unique challenges to ensure our clients' long-term success."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="/contact"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="At Samarth Meditech, we are committed to delivering industry-leading healthcare and technology solutions that drive excellence and innovation. Our dedication to quality and reliability is evident in every project we undertake, ensuring your operations run smoothly and efficiently."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Samarth Meditech as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
